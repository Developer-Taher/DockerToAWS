# Application Settings
PORT=4000
NODE_ENV=development

# MongoDB Settings
DB_HOST=mongo
DB_PORT=27017
DB_USERNAME=root
DB_PASSWORD=example
DB_NAME_DEV=myapp_dev
DB_NAME_PROD=myapp_prod

# MongoDB Connection URLs
MONGO_URL=mongodb://root:example@mongo:27017/myapp_dev?authSource=admin
MONGO_URL_DEV=mongodb://root:example@mongo:27017/myapp_dev?authSource=admin
MONGO_URL_PROD=mongodb://root:example@mongo:27017/myapp_prod?authSource=admin

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# PostgreSQL Settings
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_DB=myapp
POSTGRES_URL=postgresql://admin:admin@postgres:5432/myapp

# Security Settings
JWT_SECRET=your_jwt_secret_here_please_change_in_production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# API Settings
API_URL=http://localhost:4000
API_VERSION=v1

# CORS Settings
CORS_ORIGIN=http://localhost:3000,http://localhost:8080,http://localhost:8082

# Session Settings
SESSION_SECRET=your_session_secret_here_please_change

# Email Settings (إذا كنت هتستخدم email)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@yourapp.com

# File Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Logging Settings
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting Settings
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Cache Settings
CACHE_TTL=3600